<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 主体背景颜色值 -->
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="@color/color_4097e1"
                android:centerX="1"
