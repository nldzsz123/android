<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8px"
    android:background="@drawable/wither_round_bg"
    android:orientation="vertical"
    android:splitMotionEvents="false"
    android:visibility="visible">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="24px"
        android:layout_marginLeft="32px"
        android:text="@string/max_speed_limit"
        android:textColor="@color/color_333333"
        android:textSize="40px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/speed_limit_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="155px"
        android:layout_marginTop="25px"
        android:layout_marginRight="155px"
        android:layout_marginBottom="25px"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rising_add_tv"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_centerVertical="true"
                    android:background="@drawable/round333333_bg_def"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/color_333333"
                    android:textSize="40px" />


                <EditText
                    android:id="@+id/rising_edittv"
                    android:textAlignment="center"
                    android:layout_width="200px"
                    android:layout_height="88px"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13px"
                    android:layout_marginRight="13px"
                    android:background="@drawable/border333333_bg"
                    android:clickable="true"
                    android:cursorVisible="true"
                    android:digits="1234567890"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:imeActionLabel="完成"
                    android:inputType="number"
                    android:maxLength="5"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/color_5098e4"
                    android:textColorHint="@color/color_4097e1"
                    android:textSize="36px" />

                <TextView
                    android:id="@+id/rising_minus_tv"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_centerVertical="true"
                    android:background="@drawable/round333333_bg_def"
                    android:gravity="center"
                    android:text="—"
                    android:textColor="@color/color_333333"
                    android:textSize="40px" />
            </com.zhy.autolayout.AutoLinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8px"
                android:text="(1-3m/s)"
                android:textColor="@color/color_bdbdbd"
                android:textSize="30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8px"
                android:text="@string/rising"
                android:textColor="@color/color_333333"
                android:textSize="40px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/falling_add_tv"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_centerVertical="true"
                    android:background="@drawable/round333333_bg_def"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/color_333333"
                    android:textSize="40px" />


                <EditText
                    android:id="@+id/falling_edittv"
                    android:layout_width="200px"
                    android:layout_height="88px"
                    android:textAlignment="center"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13px"
                    android:layout_marginRight="13px"
                    android:background="@drawable/border333333_bg"
                    android:clickable="true"
                    android:cursorVisible="true"
                    android:digits="1234567890"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:imeActionLabel="完成"
                    android:inputType="number"
                    android:maxLength="5"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/color_5098e4"
                    android:textColorHint="@color/color_4097e1"
                    android:textSize="36px" />

                <TextView
                    android:id="@+id/falling_minus_tv"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_centerVertical="true"
                    android:background="@drawable/round333333_bg_def"
                    android:gravity="center"
                    android:text="—"
                    android:textColor="@color/color_333333"
                    android:textSize="40px" />
            </com.zhy.autolayout.AutoLinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8px"
                android:text="(1-3m/s)"
                android:textColor="@color/color_bdbdbd"
                android:textSize="30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8px"
                android:text="@string/falling"
                android:textColor="@color/color_333333"
                android:textSize="40px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/standard_add_tv"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_centerVertical="true"
                    android:background="@drawable/round333333_bg_def"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/color_333333"
                    android:textSize="40px" />


                <EditText
                    android:id="@+id/standard_edittv"
                    android:layout_width="200px"
                    android:layout_height="88px"
                    android:textAlignment="center"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13px"
                    android:layout_marginRight="13px"
                    android:background="@drawable/border333333_bg"
                    android:clickable="true"
                    android:cursorVisible="true"
                    android:digits="1234567890"
                    android:focusableInTouchMode="false"
                    android:gravity="center"
                    android:imeActionLabel="完成"
                    android:inputType="number"
                    android:maxLength="5"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/color_5098e4"
                    android:textColorHint="@color/color_4097e1"
                    android:textSize="36px" />

                <TextView
                    android:id="@+id/standard_minus_tv"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_centerVertical="true"
                    android:background="@drawable/round333333_bg_def"
                    android:gravity="center"
                    android:text="—"
                    android:textColor="@color/color_333333"
                    android:textSize="40px" />
            </com.zhy.autolayout.AutoLinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8px"
                android:text="(1-10m/s)"
                android:textColor="@color/color_bdbdbd"
                android:textSize="30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8px"
                android:text="@string/standard"
                android:textColor="@color/color_333333"
                android:textSize="40px" />

        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>


