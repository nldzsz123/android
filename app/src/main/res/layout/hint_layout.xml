<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hint_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_transparent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/left_item_img"
        android:layout_width="33px"
        android:layout_height="66px"
        android:alpha="50"
        android:src="@mipmap/camera_hint_left_img" />

    <TextView
        android:id="@+id/hint_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23px"
        android:background="@drawable/borderffffff50_bg"
        android:paddingLeft="25px"
        android:paddingTop="14px"
        android:paddingRight="25px"
        android:paddingBottom="14px"
        android:text="@string/disconnected_and_returning"
        android:textColor="@color/color_fe9700"
        android:textSize="40px" />

    <ImageView
        android:id="@+id/right_item_img"
        android:layout_width="33px"
        android:layout_height="66px"
        android:alpha="50"
        android:src="@mipmap/camera_hint_right_img"
        android:visibility="gone" />

</com.zhy.autolayout.AutoLinearLayout>