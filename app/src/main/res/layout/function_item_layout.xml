<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135px"
    android:layout_marginLeft="45px"
    android:layout_marginRight="45px"
    android:background="@color/color_ffffff"
    android:clickable="true"
    android:elevation="6px"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/function_img"
        android:layout_width="75px"
        android:layout_height="63px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="45px"
        android:src="@mipmap/ic_launcher_round" />

    <ImageView
        android:id="@+id/function_arrow_img"
        android:layout_width="42px"
        android:layout_height="42px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="48px"
        android:src="@mipmap/goto_verification_code_img_sele" />


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="48px"
        android:layout_toRightOf="@+id/function_img">

        <ImageView
            android:id="@+id/function_hint_img"
            android:layout_width="18px"
            android:layout_height="18px"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/function_name_tv"
            android:src="@drawable/red_top_hint_img"
            android:visibility="gone" />

        <TextView
            android:id="@+id/function_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="功能"
            android:textColor="@color/color_333333"
            android:textSize="45px" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>