<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_transparent"
    tools:context=".ui.activity.ActivationActivity">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="672px"
        android:layout_height="417px"
        android:background="@drawable/roundb8b8b890_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/waypoint_dg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17px"
            android:text="@string/waypoint_fly"
            android:textColor="@color/color_ffffff"
            android:textSize="30px"
            android:textStyle="bold" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16px"
            android:background="@color/color_333333_50"
            android:gravity="center"
            android:minHeight="167px">

            <include layout="@layout/waypoint_pointscount_layout"></include>


        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/waypoint_bottom_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8px"
            android:text="@string/waypoint_make_sure_sufficient_power"
            android:textColor="@color/color_ffffff_50"
            android:textSize="28px"
            android:visibility="gone" />


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/waypoint_speed_value_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8px"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/waypoint_speed"
                android:textColor="@color/color_ffffff"
                android:textSize="30px" />

            <TextView
                android:id="@+id/waypoint_speed_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.3"
                android:textColor="@color/color_00cf00"
                android:textSize="40px"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="m/s"
                android:textColor="@color/color_ffffff"
                android:textSize="30px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/waypoint_comfirm_bnt"
            android:layout_width="344px"
            android:layout_height="88px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="9px"
            android:layout_marginBottom="24px"
            android:background="@drawable/login_button_selcetor"
            android:gravity="center"
            android:text="@string/setting"
            android:textColor="@color/color_ffffff"
            android:textStyle="bold" />

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
