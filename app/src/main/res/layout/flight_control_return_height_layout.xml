<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_camera"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8px"
    android:background="@drawable/wither_round_bg"
    android:orientation="horizontal"
    android:splitMotionEvents="false"
    android:visibility="visible">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32px"
        android:layout_marginTop="24px"
        android:layout_marginBottom="25px"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/return_alt"
            android:textColor="@color/color_333333"
            android:textSize="40px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1px"
            android:text="@string/return_alt_details"
            android:textColor="@color/color_555555"
            android:textSize="30px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <TextView
            android:id="@+id/ab_return_hight_limit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ab_return_hight_ed"
            android:text="(30-200)"
            android:textColor="@color/color_333333"
            android:textSize="30px" />

        <EditText
            android:id="@+id/ab_return_hight_ed"
            android:layout_width="200px"
            android:layout_height="88px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8px"
            android:textAlignment="center"
            android:layout_marginRight="8px"
            android:layout_toLeftOf="@+id/dw_tv"
            android:background="@drawable/border333333_bg"
            android:clickable="true"
            android:cursorVisible="true"
            android:digits="1234567890"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:imeActionLabel="完成"
            android:inputType="number"
            android:maxLength="5"
            android:singleLine="true"
            android:text="30"
            android:textColor="@color/color_5098e4"
            android:textSize="36px" />

        <TextView
            android:id="@+id/dw_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16px"
            android:text="M"
            android:textColor="@color/color_333333"
            android:textSize="30px" />
    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoLinearLayout>


