<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.activity.PlaybackListActivity">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_alignParentTop="true"
        android:background="@color/color_333333"
        android:clickable="true">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/playback_list_back"
                android:layout_width="158px"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingLeft="43px"
                android:paddingRight="43px"
                android:src="@mipmap/back_def"
                android:visibility="visible" />

            <TextView
                android:id="@+id/playback_list_cancel_choose_mode_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="43px"
                android:paddingRight="43px"
                android:text="@string/cancel"
                android:textColor="@color/color_ffffff"
                android:textSize="43px"
                android:visibility="gone" />
        </com.zhy.autolayout.AutoRelativeLayout>


        <TextView
            android:id="@+id/playback_list_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="@string/selected"
            android:textColor="@color/color_ffffff"
            android:textSize="43px" />

        <TextView
            android:id="@+id/playback_list_check_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="43px"
            android:paddingRight="43px"
            android:text="@string/multi_select"
            android:textColor="@color/color_ffffff"
            android:textSize="43px" />
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>