<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mian_container"
    android:layout_width="672px"
    android:layout_height="533px">

    <TextView
        android:id="@+id/media_info_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:text="@string/file_details"
        android:textColor="@color/color_333333"
        android:textSize="40px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/media_info_dialog_back"
        android:layout_width="match_parent"
        android:layout_height="137px"
        android:layout_alignParentBottom="true"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="@string/return_back"
        android:textColor="@color/color_4097e1"
        android:textSize="40px"
        android:textStyle="bold" />

    <View
        android:id="@+id/media_info_view"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_above="@+id/media_info_dialog_back"
        android:background="@color/color_b8b8b8" />


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/media_info_view"
        android:layout_below="@+id/media_info_dialog_title"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/media_info_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间：2019年8月24日 10:52:34"
            android:textColor="@color/color_333333"
            android:textSize="30px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/media_info_iso_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="8px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/media_info_kuaimen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快门：1/320s"
                android:textColor="@color/color_333333"
                android:textSize="30px" />
            <TextView
                android:layout_marginLeft="20px"
                android:id="@+id/media_info_iso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ISO：3200"
                android:textColor="@color/color_333333"
                android:textSize="30px" />
        </com.zhy.autolayout.AutoLinearLayout>


        <TextView
            android:id="@+id/media_info_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8px"
            android:text="尺寸：1920x1080"
            android:textColor="@color/color_333333"
            android:textSize="30px" />

        <TextView
            android:id="@+id/media_info_lenth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8px"
            android:text="大小：30.56M"
            android:textColor="@color/color_333333"
            android:textSize="30px" />

        <TextView
            android:id="@+id/media_info_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8px"
            android:text="格式：JPG"
            android:textColor="@color/color_333333"
            android:textSize="30px"
            android:visibility="visible" />




    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>