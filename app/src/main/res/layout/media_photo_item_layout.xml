<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_view_pager"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">


    <com.feipai.flypai.ui.view.roundview.RCImageView
        android:id="@+id/media_photo_item_pic"
        android:layout_width="match_parent"
        android:layout_height="328px"
        android:scaleType="centerCrop"
        android:src="@mipmap/def_media_img"
        app:round_corner="8px" />

    <ImageView
        android:id="@+id/media_photo_item_video_play_img"
        android:layout_width="72px"
        android:layout_height="72px"
        android:layout_centerInParent="true"
        android:src="@mipmap/play_img_def" />


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/media_photo_item_remote_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/media_undownload_border_bg"
        android:visibility="gone" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/media_photo_item_pic"
        android:layout_alignBottom="@+id/media_photo_item_pic"
        android:background="@drawable/media_photo_item_time_bg">

        <TextView
            android:id="@+id/media_photo_item_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:layout_marginTop="12px"
            android:layout_marginRight="16px"
            android:layout_marginBottom="12px"
            android:gravity="right"
            android:shadowColor="@color/color_333333"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:text="@string/wide_photo"
            android:textColor="@color/color_ffffff"
            android:textSize="30px" />


    </com.zhy.autolayout.AutoRelativeLayout>


    <ImageView
        android:id="@+id/media_photo_item_choose_img"
        android:layout_width="72px"
        android:layout_height="72px"
        android:layout_alignTop="@+id/media_photo_item_pic"
        android:layout_alignRight="@+id/media_photo_item_pic"
        android:layout_marginTop="22px"
        android:layout_marginRight="22px"
        android:src="@mipmap/selected_img" />


    <ImageView
        android:id="@+id/media_photo_item_download_img"
        android:layout_width="72px"
        android:layout_height="72px"
        android:layout_alignLeft="@+id/media_photo_item_pic"
        android:layout_alignTop="@+id/media_photo_item_pic"
        android:layout_marginLeft="22px"
        android:layout_marginTop="22px"
        android:clickable="true"
        android:src="@mipmap/video_play_down_def"
        android:visibility="visible" />


</com.zhy.autolayout.AutoRelativeLayout>
