<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90px"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/contr_border_only_buttom">

    <ImageButton
        android:id="@+id/ab_back_ly"
        android:layout_width="240px"
        android:layout_height="match_parent"
        android:background="@mipmap/camera_top_back" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="500px"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/gps_hint_ly"
        android:layout_toRightOf="@+id/ab_back_ly"
        android:gravity="center_vertical"

        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ab_control_resolution_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/color_00000050"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="@string/camra_dimension"
                android:textColor="@color/color_ffffff"
                android:textSize="30px" />

            <TextView
                android:id="@+id/ab_control_resolution_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:shadowColor="@color/color_00000050"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="30FPS"
                android:textColor="@color/color_ffffff"
                android:textSize="30px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/color_00000050"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="ISO"
                android:textColor="@color/color_ffffff"
                android:textSize="30px" />

            <TextView
                android:id="@+id/ab_iso_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/color_00000050"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="AUTO"
                android:textColor="@color/color_ffffff"
                android:textSize="30px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ab_shutter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:shadowColor="@color/color_00000050"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="@string/shutter"
                android:textColor="@color/color_ffffff"
                android:textSize="30px" />

            <TextView
                android:id="@+id/ab_shutter_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:shadowColor="@color/color_00000050"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="+0.0"
                android:textColor="@color/color_ffffff"
                android:textSize="30px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/ab_wifi_img"
                android:layout_width="100px"
                android:layout_height="42px"
                android:src="@mipmap/wifi05"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ab_wifi_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:shadowColor="@color/color_00000050"
                android:shadowDx="0"
                android:shadowDy="0"
                android:visibility="gone"
                android:shadowRadius="3.0"
                android:text="0"
                android:layout_marginTop="9px"
                android:textColor="@color/color_ffffff"
                android:textSize="21px" />
        </com.zhy.autolayout.AutoRelativeLayout>




        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ab_gps_img"
                android:layout_width="100px"
                android:layout_height="42px"
                android:layout_centerInParent="true"
                android:src="@mipmap/camera_top_gps_0" />

            <TextView
                android:id="@+id/ab_gps_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ab_gps_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-9px"
                android:shadowColor="@color/color_00000050"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="0"
                android:textColor="@color/color_ffffff"
                android:textSize="21px" />
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ab_battery_ly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ab_battery_img"
                android:layout_width="29px"
                android:layout_height="45px"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/camera_top_charge_0" />

            <TextView
                android:id="@+id/ab_contr_battery_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8px"
                android:shadowColor="@color/color_00000050"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="0%"
                android:textColor="@color/color_ffffff"
                android:textSize="40px" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/gps_hint_ly"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@mipmap/camera_top_drone_status_0"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/ab_gps_hint_but"
            android:layout_width="420px"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:paddingRight="24px"
            android:shadowColor="@color/color_00000050"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3.0"
            android:text="@string/plane_not_connected"
            android:textColor="@color/color_ffffff"
            android:textSize="40px" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff_30"></View>

        <ImageButton
            android:id="@+id/ab_cotr_more_ly"
            android:layout_width="168px"
            android:layout_height="match_parent"
            android:background="@color/color_transparent"
            android:src="@mipmap/ab_cotr_more_ly" />
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>
