<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_camera"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8px"
    android:background="@drawable/wither_round_bg"
    android:orientation="horizontal"
    android:splitMotionEvents="false"
    android:visibility="visible">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32px"
        android:layout_marginTop="24px"
        android:layout_marginBottom="25px"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/return_point_reset"
            android:textColor="@color/color_333333"
            android:textSize="40px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1px"
            android:text="@string/return_point_reset_details"
            android:textColor="@color/color_555555"
            android:textSize="30px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/return_point_button"
            android:text="@string/gps_normal_can_reset"
            android:textColor="@color/color_333333"
            android:textSize="30px" />

        <TextView
            android:id="@+id/return_point_button"
            android:layout_width="200px"
            android:layout_height="88px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8px"
            android:layout_marginRight="8px"
            android:layout_toLeftOf="@+id/gps_reset_end_view"
            android:background="@drawable/border333333_bg"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="@string/reset"
            android:textColor="@color/color_5098e4"
            android:textSize="36px" />

        <TextView
            android:id="@+id/gps_reset_end_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16px"
            android:text="M"
            android:textColor="@color/color_333333"
            android:textSize="30px"
            android:visibility="invisible" />

    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoLinearLayout>




