<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_pager"
    android:layout_width="match_parent"
    android:layout_height="340px"
    android:background="@drawable/border_bg"
    android:elevation="3px"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".ui.activity.ActivationActivity">


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/media_item_bg_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/panorama_gallery_item_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/media_item_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/panorama_gallery"
            android:textColor="@color/color_ffffff"
            android:textSize="56px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/media_item_type_size_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7px"
            android:layout_toRightOf="@+id/teach_item_duration"
            android:text="最新2019年4月10日 共4个文件夹"
            android:textColor="@color/color_ffffff"
            android:textSize="30px" />
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>
