<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_transparent">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="672px"
        android:layout_height="417px"
        android:background="@drawable/roundb8b8b890_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/delay_time_dg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7px"
            android:text="@string/flying_at_uniform_speed_direction_you_chosen"
            android:textColor="@color/color_ffffff"
            android:textSize="30px"
            android:textStyle="bold" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9px"
            android:minHeight="130px"
            android:background="@color/color_333333_50"
            android:gravity="center">

            <include
                layout="@layout/delay_time_dialog_speed_layout"
                android:visibility="gone"></include>

            <include

                layout="@layout/delay_time_direction_layout"
                android:visibility="gone"></include>

            <LinearLayout
                android:id="@+id/delay_time_start_center_ly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/delay_time_dg_tv_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_shooting_size"
                    android:textColor="@color/color_ffffff"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/delay_time_dg_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="240"
                    android:textColor="@color/color_00cf00"
                    android:textSize="50px"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/delay_time_dg_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@color/color_ffffff"
                    android:textSize="50px"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/delay_time_dg_tv_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/amount_of_sheets"
                    android:textColor="@color/color_ffffff"
                    android:textSize="30px" />
            </LinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/delay_time_dg_hint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8px"
            android:text="@string/make_sure_sufficient_power_and_barrier_free"
            android:textColor="@color/color_ffffff_50"
            android:textSize="30px" />

        <TextView
            android:id="@+id/delay_time_dg_btn"
            android:layout_width="344px"
            android:layout_height="88px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="9px"
            android:background="@drawable/login_button_selcetor"
            android:gravity="center"
            android:text="@string/start"
            android:textColor="@color/color_ffffff"
            android:textStyle="bold" />

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
