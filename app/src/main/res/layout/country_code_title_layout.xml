<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_login_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_4097e1"
    tools:context=".ui.activity.LoginActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="168px"
        android:layout_marginTop="72px">

        <ImageView
            android:id="@+id/country_code_back"
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="48px"
            android:src="@mipmap/back_def" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/select_country"
            android:textColor="@color/color_ffffff"
            android:textSize="48px"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/search_img"
            android:layout_width="63px"
            android:layout_height="63px"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="51px"
            android:src="@mipmap/search_img_sele" />


        <android.support.v7.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="135px"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24px"
            android:layout_marginRight="24px"
            android:layout_toRightOf="@+id/country_code_back"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:maxWidth="921px"
            android:textColor="#000000"
            android:visibility="gone"
            app:iconifiedByDefault="false"
            app:queryBackground="@drawable/search_bg"
            app:queryHint="@string/search"
            app:searchHintIcon="@null"
            app:searchIcon="@null" />
    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoRelativeLayout>