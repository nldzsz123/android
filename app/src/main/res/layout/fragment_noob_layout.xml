<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_transparent"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24px"
        android:layout_marginRight="24px"
        android:layout_marginBottom="30px"
        android:background="@drawable/border_bg"
        android:elevation="8px"
        android:focusable="false"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ImageView
            android:layout_width="96px"
            android:layout_height="96px"
            android:src="@mipmap/splash_logo"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13px"
            android:text="@string/plane_noob_mode"
            android:textColor="@color/color_4097e1"
            android:textSize="56px"
            android:visibility="gone" />


        <ImageView
            android:layout_width="695px"
            android:layout_height="336px"
            android:layout_marginTop="177px"
            android:src="@mipmap/noob_mode_img" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="117px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="144px"
                android:text="@string/new_model"
                android:textColor="@color/color_333333"
                android:textSize="40px" />


            <com.feipai.flypai.ui.view.SwitchView
                android:id="@+id/nob_mode_switchview"
                android:layout_width="118px"
                android:layout_height="118px"
                app:isOpened="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="144px" />
        </RelativeLayout>

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75px"
            android:gravity="center"
            android:scrollbars="vertical"
            android:text="@string/plane_noob_hint"
            android:textColor="@color/color_333333"
            android:textSize="39px" />


        <Button
            android:id="@+id/goto_next_button"
            android:layout_width="814px"
            android:layout_height="124px"
            android:layout_marginTop="99px"
            android:background="@drawable/search_button_bg_def"
            android:text="@string/next_step"
            android:textColor="@color/color_ffffff"
            android:textSize="50px"
            android:textStyle="bold"
            android:visibility="gone" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>