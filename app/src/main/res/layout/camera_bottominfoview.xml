<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/sp_info"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_width="319px"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_black_to_white"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/color_00000050"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="@string/lift"
                android:textColor="@color/color_ffffff"
                android:textSize="30px" />

            <TextView
                android:id="@+id/camera_up_sp_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8px"
                android:shadowColor="@color/color_00000050"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="0.0"
                android:textColor="@color/color_ffffff"
                android:textSize="30px" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8px"
                android:shadowColor="@color/color_00000050"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="m/s"
                android:textColor="@color/color_ffffff"
                android:textSize="30px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24px"
            android:layout_marginTop="11px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:shadowColor="@color/color_00000050"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="@string/speed"
                android:textColor="@color/color_ffffff"
                android:textSize="30px" />


            <TextView
                android:id="@+id/camera_up_ho_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8px"
                android:shadowColor="@color/color_00000050"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="0.0"
                android:textColor="@color/color_ffffff"
                android:textSize="30px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8px"
                android:shadowColor="@color/color_00000050"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="m/s"
                android:textColor="@color/color_ffffff"
                android:textSize="30px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24px"
            android:layout_marginTop="11px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/color_00000050"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="@string/highly"
                android:textColor="@color/color_ffffff"
                android:textSize="30px" />

            <TextView
                android:id="@+id/camera_up_high_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8px"
                android:shadowColor="@color/color_00000050"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="0"
                android:textColor="@color/color_ffffff"
                android:textSize="40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8px"
                android:shadowColor="@color/color_00000050"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="m"
                android:textColor="@color/color_ffffff"
                android:textSize="30px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24px"
            android:layout_marginTop="11px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/color_00000050"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="@string/distance"
                android:textColor="@color/color_ffffff"
                android:textSize="30px" />

            <TextView
                android:id="@+id/camera_up_distance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8px"
                android:shadowColor="@color/color_00000050"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="0"
                android:textColor="@color/color_ffffff"
                android:textSize="50px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8px"
                android:shadowColor="@color/color_00000050"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3.0"
                android:text="m"
                android:textColor="@color/color_ffffff"
                android:textSize="30px" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/hint_tv_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="315px"
        android:layout_marginBottom="6px"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.feipai.flypai.ui.view.FPButton
            android:id="@+id/camera_ae_btn"
            android:layout_width="160px"
            android:layout_height="96px"
            android:clickable="true"
            app:backGroundImage="@mipmap/camera_bottom_lock" />
        <TextView
            android:id="@+id/camera_sd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24px"
            android:background="@drawable/back_round_all"
            android:padding="12px"
            android:text="@string/sd_card_full"
            android:textColor="@color/color_f34235"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/camera_drone_head_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24px"
            android:layout_toEndOf="@+id/camera_sd_tv"
            android:background="@drawable/back_round_all"
            android:padding="12px"
            android:text="@string/nose_and_tail_switched"
            android:textColor="@color/color_ffffff"
            android:visibility="invisible" />




        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/ab_yuntai_cal"
            android:layout_width="280px"
            android:layout_height="150px"
            android:layout_marginLeft="24px"
            android:background="@mipmap/yuntai_back"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/ab_yuntai_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_weight="4"
                android:text="水平微调"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="30px" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_margin="12px"
                android:layout_weight="1">

                <com.feipai.flypai.ui.view.FPButton
                    android:id="@+id/yuntai_left_btn"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="0dp"
                    android:background="@mipmap/ab_yunt_left_btn"></com.feipai.flypai.ui.view.FPButton>

                <com.feipai.flypai.ui.view.FPButton
                    android:id="@+id/yuntai_right_btn"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ab_yunt_right_btn"></com.feipai.flypai.ui.view.FPButton>

            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoRelativeLayout>