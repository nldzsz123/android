            <corners android:radius="30px" />
            <solid android:color="#c7c7c7" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="30px" />
                <solid android:color="#cfcfcf" />
